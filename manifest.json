{
  "manifest_version": 3,
  "name": "VoPet - 단어 해석기",
  "version": "1.1",
  "description": "드래그한 단어를 실시간으로 해석해주는 크롬 익스텐션",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "file://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["resource/lottie.min.js", "lib/kuromoji.js", "papagoIntegration.js", "homeScreen.js", "lottieIcon.js", "detailWindow.js", "screenshotTranslation.js", "japaneseMorphology.js", "translationSidebar.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "VoPet 단어 해석기"
  },
  "commands": {
    "translate-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "화면 캡처 번역"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "*.json",
        "*.html",
        "resource/*.json",
        "resource/*.png",
        "lottie/*.json",
        "lib/*.js",
        "dict/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
