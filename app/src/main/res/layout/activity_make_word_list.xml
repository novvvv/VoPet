<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/custom_white"
    tools:context=".MakeWordListActivity">


    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/cat_img_3"
    />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilWordListName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="단어장 이름을 입력해주세요!"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etWordListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="text"
            android:maxLength="50"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnJapanese"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="단어장 생성"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/custom_black"
        android:textColor="@color/custom_white"
        app:strokeColor="@color/custom_black"
        app:strokeWidth="1dp" />

</LinearLayout>